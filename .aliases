                && brew upgrade \
                && brew cleanup"

# Get local IP
alias local-ip="ipconfig getifaddr en0"

# Save Alfred Preferences
alias save-alfred-prefs="cp -r ~/Library/Application\ Support/Alfred/Alfred.alfredpreferences ~/Desktop \
                        && cp -r ~/Desktop/Alfred.alfredpreferences/ .alfred \
						&& rm -rf ~/Desktop/Alfred.alfredpreferences \
						&& echo 'Done âœ¨'"

